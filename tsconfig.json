{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
